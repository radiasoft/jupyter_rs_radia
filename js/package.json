{
    "name": "jupyter_rs_radia",
    "version": "0.1.0",
    "description": "Radia widget for Jupyter",
    "author": "RadiaSoft LLC",
    "license": "BSD-3-Clause",
    "main": "lib/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/radiasoft/jupyter_rs_radia.git"
    },
    "files": [
        "lib/**/*.js",
        "dist/*.js"
    ],
    "scripts": {
        "clean": "rimraf dist/ && rimraf ../jupyter_rs_radia/labextension/",
        "prepublish": "yarn run clean && yarn run build:prod",
        "build": "webpack --mode=development && yarn run build:labextension:dev",
        "build:prod": "webpack --mode=production && yarn run build:labextension",
        "build:labextension": "jupyter labextension build .",
        "build:labextension:dev": "jupyter labextension build --development True .",
        "watch": "webpack --watch --mode=development",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "devDependencies": {
        "@jupyterlab/builder": "^3.0.0",
        "rimraf": "^2.6.1",
        "webpack": "^5"
    },
    "dependencies": {
        "@jupyter-widgets/base": "^4.0.0",
        "@jupyter-widgets/controls": "^3.0.0",
        "@jupyterlab/application": "^3.1.13",
        "@jupyterlab/apputils": "^3.1.13",
        "d3": "^5.14.2",
        "d3-scale": "^3.2.1",
        "jquery": "^3.7.1",
        "yarn": "^1.22.22"
    },
    "jupyterlab": {
        "extension": "lib/labplugin",
        "outputDir": "../jupyter_rs_radia/labextension",
        "sharedPackages": {
            "@jupyter-widgets/base": {
                "bundled": false,
                "singleton": true
            }
        }
    }
}
